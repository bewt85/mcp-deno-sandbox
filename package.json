{
  "name": "mcp-deno-sandbox",
  "version": "0.1.7",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-deno-sandbox": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "jest --no-colors",
    "test:watch": "jest --no-colors --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run lint && npm run format:check && npm test",
    "fix": "npm run lint:fix && npm run format"
  },
  "keywords": [
    "mcp",
    "sandbox"
  ],
  "author": "Ben Taylor",
  "license": "MIT",
  "description": "An MCP server that allows you to run TypeScript and JavaScript code securely on your local machine using the DenoÂ® sandbox. This server provides a controlled environment for executing code with explicit permission controls. This project is not affiliated with Deno Land LLC in any way.",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.1",
    "deno": "^2.2.11",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "eslint": "^9.25.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bewt85/mcp-deno-sandbox.git"
  },
  "bugs": {
    "url": "https://github.com/bewt85/mcp-deno-sandbox/issues"
  },
  "homepage": "https://github.com/bewt85/mcp-deno-sandbox",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
